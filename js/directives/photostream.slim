ul.cards
  li.card.with-date ng-class="pics[0].date.format('ddd')" ng-repeat-start="(day,pics) in dayGroups"
    .date
      h1 {{pics[0].date.date()}}
      h2 {{pics[0].date.format('MMMM / YYYY')}}
    img ng-src="{{pics[0].url({resize:[1,1]})}}"
  li.card ng-repeat-end="" ng-repeat="pic in pics" ng-click="open(pic)" ng-class="{'x2': $index % 6 == 0}"
    img ng-src="{{pic.url({resize:[300,300], sharpen:[]})}}"

