.pswp tabindex="-1" role="dialog" aria-hidden="true"

  .pswp__bg

  .pswp__scroll-wrap

    .pswp__container
      .pswp__item
      .pswp__item
      .pswp__item

    .pswp__ui.pswp__ui--hidden

      .pswp__top-bar

        .pswp__counter

